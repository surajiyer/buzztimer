<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <!-- Main colored card content -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mainCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="@color/interval_card_background"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnDuplicate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvIntervalName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textColor="@color/timer_text"
                android:textSize="20sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toTopOf="@+id/tvIntervalTime"
                app:layout_constraintEnd_toStartOf="@+id/btnEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="Interval Name" />

            <TextView
                android:id="@+id/tvIntervalTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="@color/toggle_purple"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvIntervalName"
                tools:text="3 min 0 sec" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="?attr/materialIconButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/edit_interval"
                app:icon="@drawable/ic_edit"
                app:iconSize="20dp"
                app:iconTint="@color/timer_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Duplicate button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDuplicate"
        style="?attr/materialIconButtonStyle"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/duplicate_interval"
        app:icon="@drawable/ic_duplicate"
        app:iconSize="18dp"
        app:iconTint="@color/text_secondary"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Delete button outside the colored card -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDelete"
        style="?attr/materialIconButtonStyle"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:contentDescription="@string/delete_interval"
        app:icon="@drawable/ic_delete"
        app:iconSize="18dp"
        app:iconTint="@color/error"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
