<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.BuzzTimer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- OLED optimized color scheme -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorError">@color/error</item>
        <item name="android:colorBackground">@color/background</item>
        
        <!-- True black status bar for OLED screens -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
        <!-- Text appearance for better readability in dark mode -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.BuzzTimer.Headline1.Dark</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.BuzzTimer.Headline2.Dark</item>
        <item name="textAppearanceBody1">@style/TextAppearance.BuzzTimer.Body1.Dark</item>
        <item name="textAppearanceBody2">@style/TextAppearance.BuzzTimer.Body2.Dark</item>
        
        <!-- Button styles -->
        <item name="materialButtonStyle">@style/Widget.BuzzTimer.Button.Dark</item>
        <item name="materialCardViewStyle">@style/Widget.BuzzTimer.CardView.Dark</item>
        <item name="floatingActionButtonStyle">@style/Widget.BuzzTimer.FloatingActionButton</item>
    </style>
    
    <!-- Dark mode optimized text styles -->
    <style name="TextAppearance.BuzzTimer.Headline1.Dark" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">72sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.BuzzTimer.Headline2.Dark" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.BuzzTimer.Body1.Dark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="TextAppearance.BuzzTimer.Body2.Dark" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
    
    <!-- Dark mode optimized button style -->
    <style name="Widget.BuzzTimer.Button.Dark" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Dark mode optimized card style -->
    <style name="Widget.BuzzTimer.CardView.Dark" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardBackgroundColor">@color/surface</item>
        <item name="strokeColor">@color/light_gray</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Dark mode optimized FAB style -->
    <style name="Widget.BuzzTimer.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/primary</item>
        <item name="tint">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="elevation">6dp</item>
    </style>
</resources>
